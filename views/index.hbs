  {{/each}}
</ul> --}}
  <div class="col-md-6 col-12 card">
    {{!-- <table class="table"> --}}
    	{{!-- <thead> --}}
    		{{!-- <th>Burger Name</th><th>Delete</th> --}}
    	{{!-- </head> --}}
    	{{!-- <tbody> --}}
        <ul id="devoured-items" class="simple_with_animation">
        {{#each burgers}}
          {{#if devoured}}
