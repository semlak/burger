{{!-- <div class="row"> --}}

<h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-name">Burger Name:</label>
      <input type="text" id="burger-name" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="0" checked> Ready to Eat!<br>
      <input type="radio" name="devoured" value="1"> Already Eaten
    </div>

    <button type="submit">Add Burger</button>
  </form>

{{!-- </div> --}}
